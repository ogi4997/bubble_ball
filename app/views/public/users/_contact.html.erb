<% if user_signed_in? %>
    <% unless @user.id == current_user.id %>
        <% if @haveRoom == true %>
           <%= link_to "ダイレクトメッセージ", room_path(@roomId), class: "btn btn-default" %>
        <% else %>
            <%= form_with(model:@room, local: true) do |f| %>
                <%= fields_for @entry do |e| %>
                    <%= e.hidden_field :user_id, value: @user.id %>
                <%= f.submit "ダイレクトメッセージ" %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
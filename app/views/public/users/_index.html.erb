<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image_id, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.full_name %></td>
        <td id="following_count_<%= user.id %>">フォロー数：<%= "#{ user.follower.count }" %></td>
        <td id="follower_count_<%= user.id %>">フォロワー数：<%= "#{ user.followed.count }" %></td>
        <td>
          <% if current_user != user %>
            <div id="follow_button_<%= user.id %>">
              <%= render 'public/relationships/follow-button',user: user %>
            </div>
          <% end %>
        </td>
        <td><%= link_to 'ユーザー詳細', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>